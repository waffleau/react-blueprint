{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "components/*": ["src/components/*"],
      "helpers/*": ["src/helpers/*"],
      "modules/*": ["src/modules/*"],
      "styles/*": ["src/styles/*"],
      "views/*": ["src/views/*"]
    },
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["./.storybook/**/*", "./src/**/*"]
}
